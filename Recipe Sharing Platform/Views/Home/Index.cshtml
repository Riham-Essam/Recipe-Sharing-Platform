@model IEnumerable<Recipe>

@{
	ViewBag.Title = "Recipes";
}


@if (Model.Any())
{
<div class="row row-cols-1 row-cols-md-3 g-4">

	@foreach (var recipe in Model)
	{

		<div class="card">
			<div class="card-header">
				@recipe.Title
			</div>

			<div class="card-body">
				<h3 >hello</h3>
			</div>

			<div class="card-footer">
				<a asp-action="Details" asp-controller="Home" class="btn btn-primary">View</a>
			</div>

		</div>
	}

</div>
}
else
{
	<h3>No Recipes're available right now</h3>
}