@model AddRecipeViewModel

@{
	ViewBag.Title = "Add Recipe";
}

<div class="row justify-content-center">
	<div class="col-md-6">
		<h3 class="mb-4">Add Recipe</h3>

		<form method="post" enctype="multipart/form-data">

			<div asp-validation-summary="All" class="text-danger"></div>

			<div class="mb-3 row">
				<label asp-for="Title" class="col-sm-2 col-form-label"></label>
				<div class="col-sm-10">
					<input asp-for="Title" class="form-control" placeholder="Enter Recipe Title" />
					<span asp-validation-for="Title" class="text-danger"></span>
				</div>
			</div>

			<div class="mb-3 row">
				<label asp-for="Description" class="col-sm-2 col-form-label"></label>
				<div class="col-sm-10">
					<textarea asp-for="Description" id="DescriptionTextarea" class="form-control" placeholder="Enter Recipe Description"></textarea>
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
			</div>

			<div class="mb-3 row">
				<label asp-for="Ingredients" class="col-sm-2 col-form-label"></label>
				<div class="col-sm-10">
					<textarea asp-for="Ingredients" id="IngredientsTextarea" class="form-control" placeholder="Enter Recipe Ingredients"></textarea>
					<span asp-validation-for="Ingredients" class="text-danger"></span>
				</div>
			</div>

			<div class="mb-3 row">
				<label asp-for="Steps" class="col-sm-2 col-form-label"></label>
				<div class="col-sm-10">
					<textarea asp-for="Steps" id="StepsTextarea" class="form-control" placeholder="Enter Recipe Steps"></textarea>
				</div>
			</div>

			<div class="mb-3 row">
				<label asp-for="Image" class="col-sm-2 col-form-label"></label>
				<div class="col-sm-10 custom-file">
					<input asp-for="Image" class="form-control" placeholder="Select Recipe Image" />
				</div>
			</div>

			<button type="submit" class="btn btn-primary mb-3">Add</button>

		</form>
	</div>
</div>
