@model ProfileViewModel

@{
	ViewBag.Title = "My Profile";
}


<div class="row">
	<div class="col-md-3">
		<!-- Vertical Navbar -->
		@{ await Html.RenderPartialAsync("_NavBarPartial"); }
	</div>

	<div class="col-md-9">
		<!-- Content Area -->
		<div class="ml-3">
			<!-- First Column -->
			<div class="card w-50">
				<div class="card-body">
					<img src="~/images/userIcon.jpg" class="card-img-top" asp-append-version="true" alt="User" />
					<h5 class="ml-3 text-center">@Model.FirstName @Model.LastName</h5>
				</div>
			</div>
		</div>

		<!-- Second Column -->
		<div class="ml-3 mt-3 mb-3">
			<h4 id="PersonalDetails">Personal Details</h4>

			<div class="form-group mt-3">
				<label asp-for="Email"></label>
				<input asp-for="Email" class="form-control text-center" disabled />
			</div>

			<div class="form-group mt-3">
				<label asp-for="Gender"></label>
				<input asp-for="Gender" class="form-control text-center" disabled />
			</div>

			<div class="form-group mt-3">
				<label asp-for="PhoneNumber"></label>
				<input asp-for="PhoneNumber" class="form-control text-center" disabled />
			</div>
		</div>
	</div>
</div>

