@model ProfileViewModel

@{
	ViewBag.Title = "My Profile";
}

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<!-- Vertical Navbar -->
			<nav class="navbar navbar-expand-lg navbar-light bg-light flex-column">
				<a class="navbar-brand" href="#">Settings</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNav">
					<form method="post">
						<ul class="navbar-nav flex-column">

							<li class="nav-item">
								<a class="nav-link" href="#PersonalDetails">Profile</a>
							</li>

							<li class="nav-item">
								<a class="nav-link" href="#">General</a>
							</li>

							<li class="nav-item">
								<button type="submit" class="nav-link btn btn-link" asp-action="Logout" style="border: none;">Logout</button>
							</li>
							<!-- Apply the same style for the Logout button as for other nav links -->
							<!-- Add more navbar items as needed -->
						</ul>
					</form>
				</div>
			</nav>
		</div>

		<div class="col-md-9">
			<!-- Content Area -->
			<div class="ml-3">
				<!-- First Column -->
				<div class="card w-50">
					<div class="card-body">
						<img src="~/images/userIcon.jpg" class="card-img-top" asp-append-version="true" alt="User" />
						<h5 class="ml-3 text-center">@Model.FirstName @Model.LastName</h5>
					</div>
				</div>
			</div>

			<!-- Second Column -->
			<div class="ml-3 mt-3 mb-3">
				<h4 id="PersonalDetails">Personal Details</h4>

				<div class="form-group mt-3">
					<label asp-for="Email"></label>
					<input asp-for="Email" class="form-control text-center" disabled />
				</div>

				<div class="form-group mt-3">
					<label asp-for="Gender"></label>
					<input asp-for="Gender" class="form-control text-center" disabled />
				</div>

				<div class="form-group mt-3">
					<label asp-for="PhoneNumber"></label>
					<input asp-for="PhoneNumber" class="form-control text-center" disabled />
				</div>
			</div>
		</div>
	</div>
</div>
