@model GeneralInfoViewModel

@{
	ViewBag.Title = "General Info";
}


<div class="row">
	<div class="col-md-3">
		<!-- Vertical Navbar -->
		@{ await Html.RenderPartialAsync("_NavBarPartial"); }
	</div>

	<div class="col-md-9">
		<div class="ml-3 mt-3 mb-3">
			<form method="post">
				<h4>General Info</h4>

				<div asp-validation-summary="All" class="text-danger"></div>

				<div class="form-group mt-3">
					<label asp-for="FirstName"></label>
					<input asp-for="FirstName" class="form-control text-center" disabled />
				</div>

				<div class="form-group mt-3">
					<label asp-for="LastName"></label>
					<input asp-for="LastName" class="form-control text-center" disabled />
				</div>

				<div class="form-group mt-3">
					<label asp-for="Gender"></label>
					<input asp-for="Gender" class="form-control text-center" disabled />
				</div>

				<div class="form-group mt-3">
					<label asp-for="Email" for="toggleEmailInput" onclick="toggleInput('emailInput')">
						Email <span id="arrowEmail" class="arrow arrow-down">&#x25BC;</span>
					</label>
					<div id="emailInput" style="display: none;">
						<input asp-for="Email" class="form-control text-center"
							   oninput="enableButton()" placeholder="Email" />
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>
				</div>

				<div class="form-group mt-3">
					<label asp-for="PhoneNumber" for="togglePhoneInput" onclick="toggleInput('phoneInput')">
						Phone Number <span id="arrowPhone" class="arrow arrow-down">&#x25BC;</span>
					</label>
					<div id="phoneInput" style="display: none;">
						<input asp-for="PhoneNumber" class="form-control text-center"
							   placeholder="Phone Number" oninput="enableButton()" />
						<span asp-validation-for="PhoneNumber" class="text-danger"></span>
					</div>
				</div>

				<div class="form-group mt-3">
					<label asp-for="OldPassword" for="togglePasswordInput" onclick="toggleInput('passwordInput')">
						Password <span id="arrowPassword" class="arrow arrow-down">&#x25BC;</span>
					</label>

					<div id="passwordInput" style="display: none;">

						<input asp-for="OldPassword" class="form-control text-center"
							   oninput="enableButton()" placeholder="Old Password" />
						<span asp-validation-for="OldPassword" class="text-danger"></span>

						<label asp-for="NewPassword"></label>
						<input asp-for="NewPassword" class="form-control text-center"
							   oninput="enableButton()" placeholder="New Password" />
						<span asp-validation-for="NewPassword" class="text-danger"></span>

						<label asp-for="ConfirmPassword"></label>
						<input asp-for="ConfirmPassword" class="form-control text-center"
							   oninput="enableButton()" placeholder="Confirm Password" />
						<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
					</div>
				</div>

				<div class="mt-3">
					<button type="submit" id="submitButton" class="btn btn-primary" disabled>Save</button>
				</div>

			</form>
		</div>
	</div>
</div>


@section Scripts{
	<script src="~/js/toggleInput.js"></script>
	<script src="~/js/enableButton.js"></script>
}
