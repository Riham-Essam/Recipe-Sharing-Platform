@model RegisterViewModel

@{
	ViewBag.Title = "Register";
}

<div class="row justify-content-center">
	<div class="col-md-6">
		<h3 class="mb-4">User Registration</h3>

		<form method="post">

			<div asp-validation-summary="All" class="text-danger"></div>

			<div class="mb-3">
				<label asp-for="FirstName" class="form-label">@Html.DisplayNameFor(f => f.FirstName)</label>
				<input asp-for="FirstName" class="form-control" />
				<span asp-validation-for="FirstName" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="LastName" class="form-label">@Html.DisplayNameFor(l => l.LastName)</label>
				<input asp-for="LastName " class="form-control" />
				<span asp-validation-for="LastName" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="PhoneNumber" class="form-label">@Html.DisplayNameFor(p => p.PhoneNumber)</label>
				<input asp-for="PhoneNumber " class="form-control" />
				<span asp-validation-for="PhoneNumber" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="Email" class="form-label"></label>
				<input asp-for="Email" class="form-control" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="Password" class="form-label"></label>
				<input asp-for="Password" class="form-control" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label>
					<input type="radio" asp-for="Gender" value="Male" />
					Male
				</label>

				<label>
					<input type="radio" asp-for="Gender" value="Female" />
					Female
				</label>
			</div>

			<button type="submit" class="btn btn-primary">Register</button>

		</form>
	</div>
</div>